generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  weightKg  Float?
  heightCm  Float?
  bmi       Float?
  activityLevel String?
  dietaryPreferences String[] @default([])
  goals     String[] @default([])
  createdAt DateTime @default(now())
}

